# This profile is used for building on Windows, with visual studio 2017
include(default)
include(common-default-options)

[settings]
arch=x86
arch_build=x86

os=Windows
os_build=Windows

compiler=Visual Studio
compiler.version=15
compiler.toolset=v141
compiler.cppstd=17

libtool:compiler=Visual Studio
libtool:compiler.version=15
libtool:compiler.toolset=v141

# openscenegraph uses mem_fun_ref, which was removed in C++17
openscenegraph:compiler=Visual Studio
openscenegraph:compiler.version=15
openscenegraph:compiler.toolset=v141
openscenegraph:compiler.cppstd=14

# libxl uses auto_ptr internally, which was removed in C++17
libxl:compiler=Visual Studio
libxl:compiler.version=15
libxl:compiler.toolset=v141
libxl:compiler.cppstd=14

[options]
libcurl:with_openssl=False
libcurl:with_winssl=True

[build_requires]

[env]
