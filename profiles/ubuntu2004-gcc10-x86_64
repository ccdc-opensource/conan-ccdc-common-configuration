include(common-default-options)

# This profile is used to differentiate between Centos7 (older glibc) and ubuntu/debian circa 2018
[settings]
arch=x86_64
arch_build=x86_64

os=Linux
os_build=Linux
# This requires a custom settings.xml which can be obtained by conan config install
os.distro=Debian

compiler=gcc
compiler.libcxx=libstdc++11
compiler.version=10
compiler.cppstd=17

# openscenegraph uses mem_fun_ref, which was removed in C++17
openscenegraph:compiler=gcc
openscenegraph:compiler.libcxx=libstdc++11
openscenegraph:compiler.version=10
openscenegraph:compiler.cppstd=14

# libxl uses auto_ptr internally, which was removed in C++17
libxl:compiler=gcc
libxl:compiler.libcxx=libstdc++11
libxl:compiler.version=10
libxl:compiler.cppstd=14

[options]
# Cairo configuration
# Disable glib unless required
cairo:with_glib=False
# Use freetype
cairo:with_freetype=True
# Use fontconfig
cairo:with_fontconfig=True
# Disable dependency on X Window System if possible
cairo:with_xlib=False
cairo:with_xlib_xrender=False
cairo:with_xcb=False
cairo:with_lzo=False
cairo:with_opengl=False

# Not using selinux support in GIO
glib:with_selinux=False
# Not using glib to mount drives
glib:with_mount=False

# libelf can not be built as shared library on non linux or windows platforms
# This is set to False in common-default-options
libelf:shared=True

libuuid:shared=False

[build_requires]

[env]
