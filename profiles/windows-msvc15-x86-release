# This profile is used for building debug versions of libraries on Windows, with visual studio 2017
include(default)
include(common-default-options)
include(windows-msvc15-x86)

[settings]
# Build everything in release mode
compiler.runtime=MD
openscenegraph:compiler.runtime=MD

# Use release version of tooling
libtool:compiler.runtime=MD
libxl:compiler.runtime=MD
cmake:compiler.runtime=MT

[options]

[build_requires]

[env]
